{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": ["./src/**/*", "./*.ts"],
  "exclude": ["node_modules"],
  "files": ["settings.ts"]
}
